{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "types": ["meteor-typings", "zone.js"]
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : false
  }
}
